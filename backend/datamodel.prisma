enum Permission {
  ADMIN
  USER
  ITEMCREATE
  ITEMUPDATE
  ITEMDELETE
  PERMISSIONUPDATE
}

type User  {
  id: ID! @id
  name: String
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: String
  permissions: Permission
  image: String
  handle: String @unique
  pronouns: String
  bio: String
  links: [Link]
  location: String
  friends: [User]
  products: [Product]
  work: [Work]
  guidelines: [Guideline]
}



type Link {
  id: ID! @id
  display: String!
  target: String!
}

type Product {
  id: ID! @id
  image: String!
  title: String!
  price: Int!
  description: String!
  type: String
}

type Work {
  id: ID! @id
  image: String!
}

type Guideline {
  id: ID! @id
  text: String!
}
